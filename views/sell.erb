<h1>Sell your vehicle</h1>

<form action="/success" method="post">
  <label for="make">Make</label>
  <input type="text" name="make" class="form-group">
  <label for="model">Model</label>
  <input type="text" name="model" class="form-group">
  <label for="year">Year</label>
  <input type="text" name="year" class="form-group">
  <label for="color">Color</label>
  <input type="text" name="color" class="form-group">
  <label for="engine_size">Engine size</label>
  <input type="text" name="engine_size" class="form-group">
  <label for="number_of_doors">Number of doors</label>
  <input type="text" name="number_of_doors" class="form-group">
  <button type="submit">Submit</button>
</form>
